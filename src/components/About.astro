---
import { Image } from "astro:assets";

import profile from "../assets/profile.png";

// You can customize these details
const details = {
  name: "Dicky Budianto Sugiono",
  title: "Medior Front End Developer",
  location: "Surabaya, Indonesia",
  bio: `I'm a passionate Front End Developer with expertise in modern web technologies. 
  I love building user-friendly applications and solving complex problems with clean, 
  efficient code. With a strong foundation in frontend development, I strive to create seamless digital experiences that make a difference.`,
  experience: [
    {
      position: "Medior Front End Developer",
      company: "PT. Krakatau Karya Abadi",
      period: "Apr 2022 - Present",
      description:
        "Maintain, improve, and develop internal dashboard using React JS and mobile application using flutter.",
    },
    {
      position: "Junior Front End Developer",
      company: "PT. Usaha Kreatif Indonesia",
      period: "Okt 2018 - Mar 2022",
      description:
        "Developed and maintained multiple dashboard and mobile application using flutter.",
    },
  ],
};
---

<section id="about" class="py-20 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <h2
      class="text-3xl md:text-4xl font-bold text-center mb-8 text-gray-900 dark:text-white"
    >
      About Me
    </h2>

    <div class="max-w-4xl mx-auto">
      <div class="bg-white dark:bg-gray-700 rounded-lg shadow-lg p-8 mb-8">
        <div
          class="flex flex-col md:flex-row items-center md:items-start gap-8"
        >
          <div class="w-32 h-32 md:w-48 md:h-48 relative">
            <Image
              class="rounded-full w-full h-full object-cover"
              src={profile}
              alt="profile"
            />
          </div>

          <div class="flex-1">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
              {details.name}
            </h3>
            <p class="text-blue-600 dark:text-blue-400 font-medium mb-2">
              {details.title}
            </p>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              üìç {details.location}
            </p>
            <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
              {details.bio}
            </p>
          </div>
        </div>
      </div>

      <div class="space-y-6">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          Experience
        </h3>

        {
          details.experience.map((exp) => (
            <div class="bg-white dark:bg-gray-700 rounded-lg shadow-lg p-6">
              <div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
                <div>
                  <h4 class="text-xl font-semibold text-gray-900 dark:text-white">
                    {exp.position}
                  </h4>
                  <p class="text-blue-600 dark:text-blue-400">{exp.company}</p>
                </div>
                <p class="text-gray-600 dark:text-gray-400 mt-2 md:mt-0">
                  {exp.period}
                </p>
              </div>
              <p class="text-gray-600 dark:text-gray-300">{exp.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
